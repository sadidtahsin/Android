<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:background="#cccccc"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="right"
            >
            <!--     <android.support.v7.widget.AppCompatSpinner
                     android:id="@+id/spinner_profile"
                     android:background="@android:drawable/ic_menu_myplaces"
                     android:layout_width="80dp"
                     android:layout_height="50dp"
                     android:layout_gravity="right">
                 </android.support.v7.widget.AppCompatSpinner>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:text="Illuminate"
                android:gravity="center"
                android:textColor="#000000"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/imgProflieContent"
                android:onClick="onClick"
                />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:background="#333333">


            <LinearLayout
                android:id="@+id/layout_searchcoupon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/acti_main_iv_home"
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"

                    android:background="#333333"
                    />

                <Button
                    android:id="@+id/acti_main_btn_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:gravity="top|center"
                    android:text="HOME"
                    android:background="#333333"
                    android:textColor="#777777" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:id="@+id/line_survey"
                    android:background="#ffffff"/>





            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="0dp"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/acti_main_iv_coupon"
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_weight="2"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:background="#333333" />

                <Button
                    android:id="@+id/acti_main_btn_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:gravity="top|center"
                    android:text="TEST"
                    android:background="#333333"
                    android:textColor="#777777" />

                <View
                    android:layout_width="match_parent"
                    android:id="@+id/line_coupon"
                    android:layout_height="4dp"
                    android:background="#333333" />










            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/acti_main_iv_promotion"
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:background="#333333"
                    android:adjustViewBounds="false" />

                <Button
                    android:id="@+id/acti_main_btn_promotion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:gravity="top|center"
                    android:text="PROGRESS"
                    android:background="#333333"
                    android:textColor="#777777" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:id="@+id/line_loyalty"
                    android:background="#333333"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/acti_main_iv_giftcards"
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:scaleType="fitXY"
                    android:background="#333333" />

                <Button
                    android:id="@+id/acti_main_btn_giftcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:gravity="top|center"
                    android:text="PROFILE"
                    android:background="#333333"
                    android:textColor="#777777" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:id="@+id/line_giftCard"
                    android:background="#333333"/>



            </LinearLayout>









        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:layout_weight="1"
                android:backgroundTint="#ffffff" />
        </LinearLayout>



    </LinearLayout>
</LinearLayout>